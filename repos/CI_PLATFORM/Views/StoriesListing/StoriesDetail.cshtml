                                                    string videoId = photos.Text.Substring(photos.Text.LastIndexOf("/")+1);
                                                    <img class="smallimgcarousel" id="smallimg-@counter" data-originalurl = "@photos.Text" src="@string.Format(thumbUrl,videoId)"  alt="" />
                                                }
                                            </button>
                                        </div>

                                        counter++;
                                    }
                                }


                            </div>
