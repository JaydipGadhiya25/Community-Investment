        var index = $(this).data("index");
        var src = $("#smallimg-" + index).data("originalurl");
        console.log(src)
      
        if (src.includes(".com/embed/")) {
      // hide the big image and show the video iframe
      $("#bigimg").addClass("d-none");
      $("#bigvideo").removeClass("d-none");
      $("#bigvideo").attr("src",  src );
    } else {
